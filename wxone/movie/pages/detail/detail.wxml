<image src="{{detail.img}}" class="bg-pic"></image>
<view class="summary-wrap">
	<view class="summary">
		<view class="pic">
			<image src="{{detail.img}}" class="movie-pic"></image>
		</view>
		<view class="info">
			<text class="title">{{detail.nm}}</text>
			<text class="score">评分：{{detail.sc}}</text>
			<text class="category">{{detail.cat}}</text>
			<text class="duration">{{detail.src}}/{{detail.dur}}</text>
			<text class="date">{{detail.rt}}</text>
		</view>
	</view>
	<view class="btn-wrap">
		<button class="btn-watch">看过</button>
		<button class="btn-watch">评论</button>
	</view>
</view>
